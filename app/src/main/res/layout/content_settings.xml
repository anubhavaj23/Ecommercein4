<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anubhav.ecommercein4.settingsActivity"
    tools:showIn="@layout/app_bar_settings">

    <EditText

        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:paddingLeft="10dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="13dp" />


    <EditText

        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/mobileno"
        android:hint="Mobile No."
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:paddingLeft="10dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="12dp" />


    <EditText

        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/name"
        android:hint="Your Name"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:paddingLeft="10dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:paddingLeft="10dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_below="@+id/mobileno"
        android:layout_alignStart="@+id/mobileno"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Save Changes"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="82dp"
        android:id="@+id/savechangesbutton"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="18sp"
        android:textColor="#aaffffff"
        android:elevation="10dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Cancel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/cancelbutton"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="18sp"
        android:textColor="#aaffffff"
        android:elevation="10dp"
        android:layout_below="@+id/savechangesbutton"
        android:layout_alignStart="@+id/savechangesbutton"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Change Address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:id="@+id/changeaddressButton"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="18sp"
        android:textColor="#aaffffff"
        android:elevation="10dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
