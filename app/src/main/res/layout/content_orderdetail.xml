<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_orderdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anubhav.ecommercein4.orderdetailActivity"
    tools:showIn="@layout/app_bar_orderdetail">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearlayout4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Address not Set"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:id="@+id/address"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/changeaddressButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/linearlayout4"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="@drawable/cabuttonback">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Change Address"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:paddingLeft="20dp"
            android:textColor="@color/colorwindowbackground"
            android:paddingRight="20dp"
            android:clickable="false"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="#ebe5e5"
            android:id="@+id/changeaddresstext"
            android:drawableRight="@drawable/ic_rightarrow1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/changeaddressButton"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Amount"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@drawable/square_edittext"/>
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:paddingRight="20dp"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:textSize="14sp"
            android:background="@drawable/square_edittext"
            android:gravity="center_vertical|end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearlayout"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Discount"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@drawable/square_edittext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0.00"
            android:paddingRight="20dp"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:textSize="14sp"
            android:background="@drawable/square_edittext"
            android:gravity="center_vertical|end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearlayout2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Total Amount"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:background="@drawable/square_edittext"/>
        <TextView
            android:id="@+id/totalamount"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:paddingRight="20dp"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:textSize="14sp"
            android:background="@drawable/square_edittext"
            android:gravity="center_vertical|end" />
    </LinearLayout>

    <Button
        android:text="Proceed"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/proceedButton"
        android:background="@drawable/square_edittext" />

</RelativeLayout>
