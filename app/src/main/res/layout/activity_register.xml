<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anubhav.ecommercein4.registerActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/square_edittext"
        android:id="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/leftarrow"
                    android:background="@color/colorPrimary"
                    android:id="@+id/backButton" />
                <ImageView
                    android:padding="2dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/myutiicon1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>



    <EditText
        android:drawableLeft="@drawable/user"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/name"
        android:hint=" Your Name"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="40dp"
        android:inputType="number"
        android:drawableLeft="@drawable/smartphone"
        android:maxLength="10"
        android:id="@+id/mobileno"
        android:hint=" Mobile No."
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/key"
        android:ems="10"
        android:id="@+id/password"
        android:hint=" Password"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/mobileno"
        android:layout_alignStart="@+id/mobileno" />

    <EditText
        android:layout_height="40dp"
        android:inputType="text"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:id="@+id/email"
        android:hint=" Email"
        android:textColorHint="#aaffffff"
        android:paddingRight="5dip"
        android:layout_width="250dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <Button
        android:text="Register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/registerbutton"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="18sp"
        android:textColor="@color/colorwindowbackground"
        android:elevation="10dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password" />


</RelativeLayout>
